<html lang="en">
  <body>

    <main>
      {{#with car}}
        <h1>{{name}}</h1>
        <div class="details">
          <img src="/static/images/{{image}}" class="car" alt="image" />
          <p>year: {{year}}</p>
          <p>price: {{price}}</p>
          <p>description: {{description}}</p>
          <a class="btn" href="/catalog">back</a>
          <a class="btn" href="/edit/{{_id}}/car-extras">edit car extras</a>
        </div>
      {{/with}}
    </main>

  </body>
</html>